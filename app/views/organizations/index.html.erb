<%# CARDS %>








<div class="container">
  <% @organizations.each do |organization| %>
    <div class="row row-cols-3">
      <div class="card mt-5 mb-5">
        <div class="col-6 py-5">
          <div class="card-img-top">
            <%= image_tag organization.photo_url, class:"img-fluid ", :width=>100, :height=>100, :gravity=>"auto", :crop=>"fill" %>
          </div>
        </div>
        <div class="card-body">
          <div class="card-title">
            <h5 class="fw-semibold"><%= link_to organization.name.capitalize, organization_path(organization) %></h5>
          </div>
          <div class="card-text">
            <p>We have a really cool organization with awesome volunteers. join us today...</p>
            <div class="d-inline">
              <% organization.reviews.each do |review| %>
                <% @mean += review.rating %>
              <% end %>
              <% (@mean / organization.reviews.size).times do %>
                <i class="fa-solid fa-star fa-star-gold"></i>
              <% end %>
              <% (5 - (@mean / organization.reviews.size)).times do %>
                <%# <i class="fa-solid fa-star"></i> %>
                <i class="fa-regular fa-star"></i>
              <% end %>
              <% @mean = 0 %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


